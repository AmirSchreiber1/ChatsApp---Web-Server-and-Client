<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsActivity"
    android:background="@color/screenBackgroundColor">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/titleBarColor"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="25dp"
            android:gravity="center_horizontal"
            android:padding="15dp"
            android:text="Settings:"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/moveScreenWithNoDataColor"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="25dp"
            android:gravity="center_horizontal"
            android:padding="15dp"
            android:text="Change Server's Address:"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/idEdtServerAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:hint="Server's Address"
            android:inputType="text" />

        <Button
            android:id="@+id/idBtnServerAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:text="Change Server's Address"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/moveScreenWithNoDataColor"
            android:layout_marginTop="100dp"
            android:layout_marginBottom="25dp"
            android:gravity="center_horizontal"
            android:padding="15dp"
            android:text="ChatsApp has 2 Style Themes.\n Change the current theme:"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/idBtnFlipTheme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:text="Change Theme!"/>

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>